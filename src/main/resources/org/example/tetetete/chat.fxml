<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="org.example.tetetete.client.ChatController">
    <children>
        <TextArea fx:id="chatArea" editable="false" prefHeight="400.0" />
         <Label fx:id="userCountLabel" text="Users online: 0" />
        <HBox>
            <TextField fx:id="messageField" promptText="Enter your message" HBox.hgrow="ALWAYS" />
            <Button fx:id="sendButton" text="Send" />
        </HBox>
    </children>
</VBox>
